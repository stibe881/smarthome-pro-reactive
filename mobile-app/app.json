{
  "expo": {
    "name": "HomePilot Pro",
    "slug": "mobile-app",
    "version": "1.4.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#020617"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.stibe88.mobileapp",
      "appleTeamId": "QF59FHQ44R",
      "buildNumber": "75",
      "entitlements": {
        "com.apple.security.application-groups": [
          "group.com.stibe88.mobileapp"
        ]
      },
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSFaceIDUsageDescription": "Wir nutzen Face ID f端r den schnellen Login.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Wir nutzen deinen Standort f端r Geofencing (Zuhause ankommen) und um dich an deine Einkaufsliste zu erinnern, wenn du im Supermarkt bist.",
        "NSLocationAlwaysUsageDescription": "Wir nutzen deinen Standort f端r Geofencing (Zuhause ankommen) und um dich an deine Einkaufsliste zu erinnern, wenn du im Supermarkt bist.",
        "NSLocationWhenInUseUsageDescription": "Wir nutzen deinen Standort f端r Geofencing Funktionen.",
        "UIBackgroundModes": [
          "location",
          "fetch",
          "remote-notification"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "scheme": "smarthome-pro",
    "plugins": [
      "expo-location",
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#3B82F6",
          "sounds": [
            "./assets/sounds/alarm.wav",
            "./assets/sounds/doorbell.wav",
            "./assets/sounds/chime.wav"
          ]
        }
      ],
      "expo-router",
      "expo-web-browser",
      "expo-secure-store",
      "@bacons/apple-targets"
    ],
    "extra": {
      "router": {},
      "eas": {
        "projectId": "6d60636a-e8bd-43e6-a2a2-d25e7390c709"
      }
    }
  }
}