{
  "expo": {
    "name": "HomePilot Pro",
    "slug": "mobile-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#020617"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.stibe88.mobileapp",
      "buildNumber": "4",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSFaceIDUsageDescription": "Wir nutzen Face ID für den schnellen Login.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Wir nutzen deinen Standort, um zu erkennen, wenn du nach Hause kommst, und dir das Öffnen der Tür anzubieten.",
        "NSLocationWhenInUseUsageDescription": "Wir nutzen deinen Standort für Geofencing funktionen.",
        "UIBackgroundModes": [
          "location",
          "fetch",
          "remote-notification"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "scheme": "smarthome-pro",
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#020617"
        }
      ],
      "expo-router"
    ],
    "extra": {
      "router": {},
      "eas": {
        "projectId": "6d60636a-e8bd-43e6-a2a2-d25e7390c709"
      }
    }
  }
}